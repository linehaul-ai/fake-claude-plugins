{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write.*\\.go|Edit.*\\.go",
        "hooks": [
          {
            "type": "command",
            "command": "go fmt ${file}"
          },
          {
            "type": "command",
            "command": "go vet ${file}"
          }
        ]
      },
      {
        "matcher": "Write.*internal/tools/.*\\.go|Edit.*internal/tools/.*\\.go",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Note: Review this tool file for proper MCP patterns, jsonschema tags, and error handling'"
          }
        ]
      },
      {
        "matcher": "Write.*internal/client/.*\\.go|Edit.*internal/client/.*\\.go",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Note: Review this API client for proper error handling, context propagation, and HTTP best practices'"
          }
        ]
      },
      {
        "matcher": "Write.*go\\.mod|Edit.*go\\.mod",
        "hooks": [
          {
            "type": "command",
            "command": "go mod tidy"
          }
        ]
      }
    ]
  }
}
